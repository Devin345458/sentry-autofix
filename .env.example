# Sentry
SENTRY_WEBHOOK_SECRET=your_sentry_webhook_secret_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
SENTRY_ORG_SLUG=your-org-slug

# GitHub
GITHUB_TOKEN=your_github_pat_here

# Claude API (use Anthropic API or local Ollama)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_BASE_URL=http://localhost:11434  # Uncomment for local Ollama

# Claude Code CLI (leave empty to auto-resolve from node_modules/.bin/claude)
# CLAUDE_CODE_PATH=
CLAUDE_MODEL=sonnet-4-5

# Server
PORT=3000

# Paths
REPOS_DIR=/tmp/sentry-autofix-repos
DB_PATH=./data/sentry-autofix.db
CONFIG_PATH=./config.json

# Fix engine
MAX_CONCURRENT_FIXES=1
MAX_ATTEMPTS_PER_ISSUE=2
LOG_LEVEL=info
